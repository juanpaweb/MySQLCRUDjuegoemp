<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:weightSum="1"
    android:background="@drawable/fondo_pant3">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.85"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:text="Adquisicion recursos de produccion"
                android:id="@+id/textView10"
                android:textSize="15dp"
                android:textColor="#000"
                android:singleLine="true"
                android:gravity="center_vertical|center_horizontal" />
        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.61">

            <TextView
                android:layout_width="85dp"
                android:layout_height="40dp"
                android:text="Pago de contado? S o N"
                android:id="@+id/textView12"
                android:layout_row="0"
                android:layout_column="1"
                android:background="#c539b1"
                android:textColor="#fff"
                android:singleLine="false"
                android:textSize="12dp"
                android:gravity="center_vertical|center_horizontal|fill_vertical" />

            <EditText
                android:layout_width="165dp"
                android:layout_height="55dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/kit_maquinariaU"
                android:layout_row="1"
                android:layout_column="0"
                android:hint="Kit maquinaria (U)"
                android:textSize="12dp"
                android:textColorHint="#000"
                android:singleLine="true" />

            <EditText
                android:layout_width="145dp"
                android:layout_height="55dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/tela_nal_mts"
                android:layout_row="2"
                android:layout_column="0"
                android:textSize="12dp"
                android:hint="Tela Nacional (mts)"
                android:textColorHint="#000"
                android:singleLine="true" />

            <EditText
                android:layout_width="55dp"
                android:layout_height="56dp"
                android:id="@+id/kitmaquinaria_son"
                android:layout_row="1"
                android:layout_column="1"
                android:singleLine="true" />

            <EditText
                android:layout_width="54dp"
                android:layout_height="56dp"
                android:id="@+id/tela_nacional_son"
                android:layout_row="2"
                android:layout_column="1"
                android:singleLine="true" />

            <EditText
                android:layout_width="135dp"
                android:layout_height="55dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/telaimportada_mts"
                android:layout_row="3"
                android:layout_column="0"
                android:textSize="12dp"
                android:hint="Tela Importada (mts)"
                android:textColorHint="#000"
                android:singleLine="true" />

            <EditText
                android:layout_width="51dp"
                android:layout_height="59dp"
                android:id="@+id/tela_importada_son"
                android:layout_row="3"
                android:layout_column="1"
                android:singleLine="true" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="55dp"
                android:inputType="number"
                android:ems="10"
                android:layout_row="4"
                android:layout_column="0"
                android:hint="Otros insumos Combate (U)"
                android:textSize="12dp"
                android:textColorHint="#000"
                android:id="@+id/otros_insumos_com_U"
                android:singleLine="true" />

            <EditText
                android:layout_width="51dp"
                android:layout_height="58dp"
                android:id="@+id/otros_insumos_combate_son"
                android:layout_row="4"
                android:layout_column="1"
                android:singleLine="true" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="55dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/otros_insumos_elite_U"
                android:layout_row="5"
                android:layout_column="0"
                android:hint="Otros insumos elite (unidades)"
                android:textSize="12dp"
                android:textColorHint="#000"
                android:singleLine="true" />

            <EditText
                android:layout_width="51dp"
                android:layout_height="58dp"
                android:id="@+id/otros_insumos_elite_son"
                android:layout_row="5"
                android:layout_column="1"
                android:singleLine="true" />

        </GridLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Guardar datos"
            android:id="@+id/guardar4"
            android:layout_gravity="center_horizontal"
            android:textSize="10dp"
            android:layout_weight="1.23" />

        <Button
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:text="Ver"
            android:id="@+id/ver4"
            android:layout_gravity="center_horizontal"
            android:textSize="10dp"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>
