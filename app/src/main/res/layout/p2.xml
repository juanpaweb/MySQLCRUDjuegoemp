<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:weightSum="1"
    android:background="@drawable/fondo_pant3">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Presupuesto Maestro"
        android:textAlignment="center"
        android:textSize="22dp"
        android:textColor="#000"
        android:gravity="center_vertical|center_horizontal"
        android:layout_weight="0.11" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.49">


        <TextView
            android:layout_width="58dp"
            android:layout_height="40dp"
            android:text="Tipo de camisa"
            android:id="@+id/textView"
            android:layout_row="0"
            android:layout_column="0"
            android:textSize="15dp"
            android:background="#BCA9AD"
            android:textColor="#FFF"
            android:textAlignment="center" />

        <TextView
            android:layout_width="96dp"
            android:layout_height="40dp"
            android:text="NÃºmero de camisas"
            android:id="@+id/textView2"
            android:layout_row="0"
            android:layout_column="1"
            android:textSize="15dp"
            android:background="#D53E48"
            android:textColor="#FFF"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="69dp"
            android:layout_height="40dp"
            android:text="$ Venta Unitario"
            android:id="@+id/textView3"
            android:layout_row="0"
            android:layout_column="2"
            android:textSize="15dp"
            android:background="#BCA9AD"
            android:textColor="#FFF" />

        <TextView
            android:layout_width="145dp"
            android:layout_height="40dp"
            android:text=" Inv. en Publicidad"
            android:id="@+id/textView4"
            android:layout_row="0"
            android:layout_column="3"
            android:textSize="15dp"
            android:background="#D53E48"
            android:textColor="#FFF"
            android:layout_rowSpan="2"
            android:singleLine="false" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="96dp"
            android:layout_height="28dp"
            android:layout_row="1"
            android:layout_column="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A Fabricar"
                android:id="@+id/textView8"
                android:textSize="10dp"
                android:layout_row="2"
                android:layout_column="1"
                android:background="#EA5B60"
                android:textColor="#fff" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  A vender"
                android:id="@+id/textView9"
                android:textSize="10dp"
                android:layout_row="1"
                android:layout_column="1"
                android:background="#060606"
                android:textColor="#FFF"
                android:textAlignment="center" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:text="Elite"
            android:id="@+id/textView5"
            android:layout_row="2"
            android:layout_column="0"
            android:textColor="#000" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="97dp"
            android:layout_height="21dp"
            android:layout_row="2"
            android:layout_column="1">

            <EditText
                android:layout_width="45dp"
                android:layout_height="29dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/n_cam_fabricar_elite" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/n_cam_venta_elite"
                android:layout_weight="1" />
        </LinearLayout>

        <EditText
            android:layout_width="63dp"
            android:layout_height="29dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/ventau_elite"
            android:layout_row="2"
            android:layout_column="2" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/publicidad_elite"
            android:layout_row="2"
            android:layout_column="3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ejecutivo"
            android:id="@+id/textView6"
            android:layout_row="3"
            android:layout_column="0"
            android:textColor="#000" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="96dp"
            android:layout_height="25dp"
            android:layout_row="3"
            android:layout_column="1">

            <EditText
                android:layout_width="45dp"
                android:layout_height="33dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/n_cam_fabricar_ejecutivo" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/n_cam_venta_ejecutivo"
                android:layout_weight="1" />
        </LinearLayout>

        <EditText
            android:layout_width="63dp"
            android:layout_height="33dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/ventau_ejecutivo"
            android:layout_row="3"
            android:layout_column="2" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/publicidad_ejecutivo"
            android:layout_row="3"
            android:layout_column="3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Combate"
            android:id="@+id/textView7"
            android:layout_row="4"
            android:layout_column="0"
            android:textColor="#000" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="97dp"
            android:layout_height="24dp"
            android:layout_row="4"
            android:layout_column="1">

            <EditText
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/n_cam_fabricar_combate" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/n_cam_venta_combate"
                android:layout_weight="1" />
        </LinearLayout>

        <EditText
            android:layout_width="63dp"
            android:layout_height="30dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/ventau_combate"
            android:layout_row="4"
            android:layout_column="2" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/publicidad_combate"
            android:layout_row="4"
            android:layout_column="3" />
    </GridLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="GUARDAR"
            android:id="@+id/buttonAdd1"
            android:layout_gravity="center_horizontal"
            android:textSize="10dp"
            android:layout_weight="1" />

        <Button
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:text="CONTINUAR"
            android:id="@+id/continuar1"
            android:layout_gravity="center_horizontal"
            android:onClick="continuar"
            android:textSize="10dp"
            android:layout_weight="1" />

        <Button
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:text="VER"
            android:id="@+id/buttonView1"
            android:layout_gravity="center_horizontal"
            android:textSize="10dp"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>
