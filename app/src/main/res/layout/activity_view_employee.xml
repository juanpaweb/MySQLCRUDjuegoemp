<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="net.simplifiedcoding.efe.ViewEmployee">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:id="@+id/editTextId" />

        <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etg"
        android:layout_row="1"
        android:layout_column="0"
        android:hint="Ingrese nÃºmero de grupo" />

    <EditText
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/ettacdt"
        android:layout_row="2"
        android:layout_column="0"
        android:hint="Traslado de Cta Cte a CDT" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etpmcc"
        android:layout_row="2"
        android:layout_column="1"
        android:hint="Plazo en meses" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etcdt"
        android:layout_row="3"
        android:layout_column="0"
        android:hint="Traslado de CDT a Cta Corriente" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etscb"
        android:layout_row="4"
        android:layout_column="0"
        android:hint="Solicitud de credito bancario" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etscbm"
        android:layout_row="4"
        android:layout_column="1"
        android:hint="PLazo en meses" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etpcb"
        android:layout_row="5"
        android:layout_column="0"
        android:hint="Pago de credito bancario" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etpc"
        android:layout_row="6"
        android:layout_column="0"
        android:hint="Pago de Ctas por pagar" />



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etm"
        android:layout_row="1"
        android:layout_column="1"
        android:hint="Ingrese mes" />

        <Button
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:text="Update Employee"
            android:id="@+id/buttonUpdate"
            android:layout_row="7"
            android:layout_column="0" />

        <Button
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:text="Delete Employee"
            android:id="@+id/buttonDelete"
            android:layout_row="8"
            android:layout_column="0" />

    </GridLayout>

</LinearLayout>
